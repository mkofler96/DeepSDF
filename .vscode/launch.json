            "program": "${file}",
            "console": "integratedTerminal",
            "args": "-o simulations/optimization_double_lattice_flexicubes"
        },
        {
            "name": "Debug Training from 50",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "-e experiments/simple_geom --batch_split 5"
        },
        {
            "name": "Create Libtorch Executable",
            "type": "debugpy",

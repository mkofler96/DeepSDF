            "program": "${file}",
            "console": "integratedTerminal",
            "args": "-e experiments/corner_spheres_only_small_network -c 1000",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "--debug",
            "justMyCode": false
        },
        {
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false
        }
